<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.project.moviebookingapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_moviesearch"
        android:name="com.project.moviebookingapp.ui.movie.MovieSearchFragment"
        android:label="Movie search"
        tools:layout="@layout/fragment_moviesearch" />

    <fragment
        android:id="@+id/navigation_ticketlist"
        android:name="com.project.moviebookingapp.ui.ticket.TicketListFragment"
        android:label="Tickets"
        tools:layout="@layout/fragment_ticketlist" />

    <fragment
        android:id="@+id/navigation_concession"
        android:name="com.project.moviebookingapp.ui.concession.ConcessionFragment"
        android:label="Concessions"
        tools:layout="@layout/fragment_concession" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.project.moviebookingapp.ui.account.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"/>
</navigation>